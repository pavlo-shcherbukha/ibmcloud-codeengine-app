  "servers": [
    {
      "url": "https://psh-app1.12985tlgl6hs.eu-gb.codeengine.appdomain.cloud",
      "variables": {},
      "description": "code engine"
    }
  ],
  "paths": {
    "/customer": {
      "summary": "customer operation",
      "description": "customer",
      "post": {
        "tags": [
          "GetCustomeByPhone"
        ],
        "summary": "Get ustomer by pthone",
        "description": "Get ustomer by pthone",
        "operationId": "CustomeByPthon",
        "requestBody": {
          "description": "Update an existent pet in the store",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CustByPthoneRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CustByPthoneResponse"
                }
              }
            }
          },
          "405": {
            "description": "Validation exception",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/customer/{cif}": {
      "summary": "customer operation",
      "description": "get customer by cif",
      "get": {
        "tags": [
          "GetCustomeByCif"
        ],
        "summary": "Get customer by cif",
        "description": "Get ustomer by cif",
        "operationId": "CustomeByCif",
        "parameters": [
          {
            "name": "cif",
            "in": "path",
            "description": "cif of customer that needs to be fetched",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CustByPthoneResponse"
                }
              }
            }
          },
          "405": {
            "description": "Validation exception",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Order": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "example": 10
          },
          "petId": {
            "type": "integer",
            "format": "int64",
            "example": 198772
          },
          "quantity": {
            "type": "integer",
            "format": "int32",
            "example": 7
          },
          "shipDate": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      },
      "CustByPthoneRequest": {
        "type": "object",
        "properties": {
          "phone": {
            "type": "string"
          }
        }
      },
      "CustByPthoneResponse": {
        "type": "object",
        "properties": {
          "cif": {
            "type": "string",
            "description": "Customer ID",
            "example": 100012345
          },
          "name": {
            "type": "string",
            "description": "customer short name",
            "example": "Ercule Puaro"
          },
          "phone": {
            "type": "string",
            "description": "Customer phone",
            "example": "380-50-222-33-44"
          },
          "accounts": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Account"
            }
          }
        }
      },
      "Account": {
        "type": "object",
        "properties": {
          "account": {
            "type": "string"
          },
          "currency": {
            "type": "string"
          }
        }
      }
    }
  }
}